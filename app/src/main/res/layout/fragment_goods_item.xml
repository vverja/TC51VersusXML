<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="viewModel"
        type="com.vereskul.tc51versusxml.presentation.ui.order.OrderViewModel" />
    <variable
        name="goodsModel"
        type="com.vereskul.tc51versusxml.domain.models.GoodsModel" />
</data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.order.GoodsItemFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CCCACA"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:text="@string/text_label_item_name"/>

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:text="@{goodsModel.name}"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:textColor="@color/design_default_color_primary"
                    tools:text="Лимонад зі смаком апельсина" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tare_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="4dp"
                    android:text="@string/its_tare"
                    android:textSize="20sp" />
                <CheckBox
                    android:id="@+id/is_tare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:checked="@={goodsModel.tare}"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_qty_plan_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CCCACA"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:text="@string/text_label_qty" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_qty_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_border"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        app:setDouble="@{goodsModel.qty}"
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:textColor="@color/design_default_color_primary"
                        tools:text="10"/>
                    <TextView
                        android:id="@+id/units_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_border"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="@{goodsModel.units}"
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:textColor="@color/design_default_color_primary"
                        tools:text="кг" />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_qty_fact_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCACA"
                android:padding="4dp"
                android:textSize="20sp"
                android:text="@string/text_label_qty_fact"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button"
                            android:id="@+id/button_minus_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-1"
                            android:textSize="15sp"
                            app:iconPadding="0dp" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_minus_5"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-5"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:id="@+id/button_minus_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-10"
                        android:textSize="15sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/item_qty_fact"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_border"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    app:setDouble="@={goodsModel.qtyFact}"
                    android:textSize="20sp"
                    android:textColor="@{goodsModel.qty == goodsModel.qtyFact? @color/design_default_color_primary : @color/design_default_color_error}"
                    tools:text="500" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button"
                            android:id="@+id/button_plus_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:text="+1"/>
                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.MaterialComponents.Button"
                            android:id="@+id/button_plus_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:text="+5"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:id="@+id/button_plus_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="+10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_barcode_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCACA"
                android:padding="4dp"
                android:textSize="20sp"
                android:text="@string/text_label_barcode"
                />
            <EditText
                android:id="@+id/item_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:inputType="numberDecimal"
                android:padding="4dp"
                android:textSize="20sp"
                android:text="@={goodsModel.barcode}"
                android:textColor="@color/design_default_color_primary"
                tools:text="482000121015245" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_barcode_to_1c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:text="@string/text_buton_add_barcode"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>